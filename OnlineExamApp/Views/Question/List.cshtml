@model List<OnlineExamApp.Entities.Question>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-sm-flex justify-content-between align-items-start">
                            <div>
                                <h4 class="card-title card-title-dash">Pending Requests</h4>
                                <p class="card-subtitle card-subtitle-dash">@Model.Count adet Soru mevcut</p>
                            </div>
                            <div>
                                <a class="btn btn-primary btn-lg text-white mb-0 me-0" href="/Question/Add"></a>
                            </div>
                        </div>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Başlık</th>
                                        <th>Cevaplar</th>
                                        <th>Doğru Cevap</th>
                                        <th>Sınav</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Title</td>
                                            <td>@item.Answers</td>
                                            <td>@item.CorrectAnswer</td>
                                            <td>@item.Exam.Name</td>
                                            <td>
                                                <a href="/Question/Update/@item.Id" class="btn btn-success btn-sm far fa-edit">Güncelle</a> &nbsp;&nbsp;
                                                <a href="#" class="btn btn-danger btn-sm far fa-trash-alt btnSil" onclick="DeleteQuestion(@item.Id)">Sil</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:/partials/_footer.html -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Premium <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap admin template</a> from BootstrapDash.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Copyright © 2021. All rights reserved.</span>
        </div>
    </footer>
    <!-- partial -->
</div>
<script src="/js/pageJs/question.js"></script>

