@model OnlineExamApp.Entities.Exam
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Default form</h4>
                        <p class="card-description">
                            Sınav Güncelleme
                        </p>
                        <form class="forms-sample">
                            @Html.HiddenFor(model => model.Id, new { id = "Id" })
                            <div class="form-group">
                                <label>Ad</label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { id = "Name", @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Soru Sayısı</label>
                                @Html.EditorFor(model => model.QuestionCount, new { htmlAttributes = new { id = "QuestionCount", @class = "form-control" } })
                            </div>
                            <button type="button" class="btn btn-primary me-2" onclick="UpdateExam()">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Premium <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap admin template</a> from BootstrapDash.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Copyright © 2021. All rights reserved.</span>
        </div>
    </footer>
    <!-- partial -->
</div>
<script src="/js/pageJs/exam.js" type="text/javascript"></script>