@model List<OnlineExamApp.Entities.Question>
@{
    ViewData["Title"] = "EnterExam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/pageCss/exam.css" rel="stylesheet" />

<div class="container mt-sm-5 my-1">
    <div class="question ml-sm-5 pl-sm-5 pt-2">
        @foreach (var item in Model)
        {
            var ans = item.Answers.Split('\n');           
            <div class="py-2 h5"><b>@item.Content</b></div>
            <div class="ml-md-3 ml-sm-3 pl-md-5 pt-sm-0 pt-3 options">
                <input type="hidden" value="@item.CorrectAnswer" class="correctAnswer" />
                @foreach (var answer in ans)
                {
                    <label class="options">
                        @answer
                        <input type="radio" name="radio">
                        <span class="radio"></span>
                    </label>
                }
            </div>
        }       
        <button type="button" class="btn btn-success" onclick="FinishExam()">Sınavı Bitir</button>
    </div>
</div>

<script src="~/js/pageJs/exam.js"></script>